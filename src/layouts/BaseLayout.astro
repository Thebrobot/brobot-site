---
import '../styles/global.css';
import MouseTracker from '../components/MouseTracker';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: string;
}

const { 
  title = "Brobot Media | AI Voice Agents & Lead Automation for Local Businesses",
  description = "AI-powered voice agents, CRM automation, and review management for HVAC, plumbing, dental, real estate & 20+ industries. Book appointments 24/7, never miss a lead.",
  image = "/images/brobot_landscape.png",
  type = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site || 'https://thebrobot.com');
const ogImageURL = new URL(image, Astro.site || 'https://thebrobot.com');
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/images/favicon.png" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageURL} />
    <meta property="og:site_name" content="Brobot Media" />
    <meta property="og:locale" content="en_US" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageURL} />
    
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1" />
    
    <!-- Font Preloading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <title>{title}</title>
    
    <!-- Page-specific head content (schema, etc.) -->
    <slot name="head" />
    
    <!-- Structured Data - Organization -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Brobot Media",
      "url": "https://thebrobot.com",
      "logo": "https://thebrobot.com/images/favicon.png",
      "description": "AI-powered business automation platform providing voice AI agents, CRM, review management, and local SEO for service-based businesses.",
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "sales",
        "url": "https://thebrobot.com/contact"
      },
      "sameAs": []
    })} />

    <!-- GoHighLevel Chat Widget -->
    <link rel="stylesheet" href="https://stcdn.leadconnectorhq.com/intl-tel-input/17.0.12/css/intlTelInput.min.css">
    <script 
      src="https://beta.leadconnectorhq.com/loader.js"  
      data-resources-url="https://beta.leadconnectorhq.com/chat-widget/loader.js" 
      data-widget-id="697afb8edad8af891080ebef"> 
    </script>

    <!-- Unicorn Studio (load only on tablet/desktop, and only when needed) -->
    <script is:inline>
      (function () {
        const TABLET_UP = '(min-width: 768px)';
        const SCRIPT_ID = 'unicornstudio-umd';
        const SCRIPT_SRC = 'https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v1.4.29/dist/unicornStudio.umd.js';

        function hasUnicornProject() {
          return !!document.querySelector('[data-us-project]');
        }

        function shouldLoadUnicorn() {
          return window.matchMedia(TABLET_UP).matches && hasUnicornProject();
        }

        function ensureLoadedAndInit() {
          if (!shouldLoadUnicorn()) return;

          const existing = document.getElementById(SCRIPT_ID);
          if (existing) {
            if (window.UnicornStudio) window.UnicornStudio.init();
            return;
          }

          const s = document.createElement('script');
          s.id = SCRIPT_ID;
          s.src = SCRIPT_SRC;
          s.onload = () => {
            if (window.UnicornStudio) window.UnicornStudio.init();
          };
          document.head.appendChild(s);
        }

        window.addEventListener('load', ensureLoadedAndInit);
        document.addEventListener('astro:after-swap', ensureLoadedAndInit);
      })();
    </script>
  </head>
  <body class="antialiased selection:bg-amber-100 selection:text-amber-900">
    <MouseTracker client:load />
    <slot />
  </body>
</html>
