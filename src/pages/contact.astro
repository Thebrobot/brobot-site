---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar';
import FloatingMenu from '../components/FloatingMenu';
import Footer from '../components/Footer';
import { Mail, Phone, Send, Activity, Shield } from 'lucide-react';
import { motion } from 'framer-motion';

const pathname = "/contact";
---

<BaseLayout title="Contact | Brobot Media">
  <main class="min-h-screen bg-[#020617] text-white">
    <Navbar client:load pathname={pathname} />
    
    <section class="pt-48 pb-32 px-6 relative overflow-hidden">
      <!-- Ambient Background Glows -->
      <div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-amber-600/10 blur-[120px] rounded-full -z-10"></div>
      <div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-amber-600/5 blur-[120px] rounded-full -z-10"></div>

      <div class="container mx-auto max-w-6xl relative z-10">
        <div class="flex flex-col lg:flex-row gap-24">
          <div class="flex-1">
            <div class="flex items-center gap-3 mb-8 text-amber-500">
              <Activity class="w-4 h-4 animate-pulse" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">Transmission_Hub</span>
            </div>
            
            <h1 class="text-6xl md:text-8xl font-display font-black tracking-tighter mb-8 leading-[0.9]">
              INITIATE <br />
              <span class="text-amber-500 italic">SCALING.</span>
            </h1>
            
            <p class="text-xl text-slate-400 font-medium mb-16 leading-relaxed max-w-md">
              Ready to stop missing calls and start booking more jobs? Send us a message and we'll deploy your custom AI agent.
            </p>

            <div class="space-y-10">
              <div class="flex items-center gap-8 group">
                <div class="h-16 w-16 rounded-[24px] bg-white/[0.03] border border-white/10 flex items-center justify-center text-amber-500 group-hover:bg-amber-600/20 transition-all duration-500">
                  <Mail class="h-7 w-7" />
                </div>
                <div>
                  <p class="text-[10px] font-black uppercase tracking-[0.3em] text-slate-500 mb-1">Direct_Mail</p>
                  <p class="text-xl font-bold text-white group-hover:text-amber-400 transition-colors">hello@brobotmedia.com</p>
                </div>
              </div>
              
              <div class="flex items-center gap-8 group">
                <div class="h-16 w-16 rounded-[24px] bg-white/[0.03] border border-white/10 flex items-center justify-center text-amber-500 group-hover:bg-amber-600/20 transition-all duration-500">
                  <Phone class="h-7 w-7" />
                </div>
                <div>
                  <p class="text-[10px] font-black uppercase tracking-[0.3em] text-slate-500 mb-1">Voice_Line</p>
                  <p class="text-xl font-bold text-white group-hover:text-amber-400 transition-colors">+1 (555) BRO-BOTS</p>
                </div>
              </div>
            </div>

            <div class="mt-20 flex items-center gap-4 text-slate-600">
              <Shield class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-widest">End-to-End Encryption Enabled</span>
            </div>
          </div>

          <div class="flex-1 relative">
            <div class="absolute inset-0 bg-amber-600/5 blur-3xl rounded-[60px]"></div>
            <div class="relative bg-white/[0.02] backdrop-blur-3xl border border-white/10 rounded-[60px] p-10 md:p-14 shadow-2xl">
              <form class="space-y-8">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                  <div class="space-y-3">
                    <label class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-500 ml-2">Commander_Name</label>
                    <input 
                      type="text" 
                      class="w-full h-16 px-8 rounded-[24px] bg-white/[0.03] border border-white/10 text-white placeholder:text-slate-700 focus:border-amber-500 focus:bg-white/[0.05] transition-all outline-none font-medium" 
                      placeholder="John Doe" 
                    />
                  </div>
                  <div class="space-y-3">
                    <label class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-500 ml-2">Digital_Address</label>
                    <input 
                      type="email" 
                      class="w-full h-16 px-8 rounded-[24px] bg-white/[0.03] border border-white/10 text-white placeholder:text-slate-700 focus:border-amber-500 focus:bg-white/[0.05] transition-all outline-none font-medium" 
                      placeholder="john@example.com" 
                    />
                  </div>
                </div>
                
                <div class="space-y-3">
                  <label class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-500 ml-2">Mission_Details</label>
                  <textarea 
                    rows="4" 
                    class="w-full p-8 rounded-[32px] bg-white/[0.03] border border-white/10 text-white placeholder:text-slate-700 focus:border-amber-500 focus:bg-white/[0.05] transition-all outline-none resize-none font-medium" 
                    placeholder="Tell us about your business goals..."
                  ></textarea>
                </div>
                
                <button 
                  type="submit"
                  class="w-full h-20 bg-amber-600 text-white rounded-[24px] font-black text-lg uppercase tracking-[0.2em] hover:bg-amber-500 transition-all flex items-center justify-center gap-4 shadow-[0_0_50px_-10px_rgba(245,158,11,0.5)] group"
                >
                  Deploy_Message
                  <Send class="h-5 w-5 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform" />
                </button>

                <p class="text-center text-slate-600 text-[9px] font-bold uppercase tracking-widest mt-8">
                  Secure channel established. response time: &lt; 2 hours.
                </p>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <FloatingMenu client:load pathname={pathname} />
    
    <Footer client:visible />
  </main>
</BaseLayout>
