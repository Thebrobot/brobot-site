---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer';
import Navbar from '../components/Navbar';
import FloatingMenu from '../components/FloatingMenu';
import VoicePreview from '../components/VoicePreview';
import AutomationEngine from '../components/AutomationEngine';
import FAQ from '../components/FAQ';
import AgentBroskiIcon from '../components/AgentBroskiIcon';
import { ArrowRight, Mic2, Bot, Zap, Sparkles, ShieldCheck, Clock, PhoneCall, MessagesSquare, CalendarCheck2 } from 'lucide-react';

const pathname = "/conversational-ai";
---

<BaseLayout title="Agent Broski | Human-Grade AI | Brobot Media">
  <main class="min-h-screen bg-[#020617] text-white pt-32 pb-20">
    <Navbar client:load pathname={pathname} />
    
    <!-- Hero Section -->
    <section class="relative px-6 py-20 overflow-hidden">
      <div class="absolute inset-0 bg-cyan-500/5 blur-[120px] rounded-full scale-150 -z-10"></div>
      <div class="max-w-7xl mx-auto text-center">
        <div class="flex justify-center mb-8">
          <div class="w-20 h-20 rounded-3xl bg-cyan-600/10 border border-cyan-500/20 flex items-center justify-center text-cyan-500 shadow-[0_0_50px_-10px_rgba(6,182,212,0.3)]">
            <AgentBroskiIcon client:visible className="w-10 h-10" size={40} />
          </div>
        </div>
        <h1 class="text-6xl md:text-8xl font-display font-black tracking-tighter mb-6 leading-tight">
          MEET YOUR <br />
          <span class="text-cyan-500 italic uppercase">AGENT BROSKI</span>
        </h1>
        <p class="text-xl md:text-2xl text-slate-400 max-w-3xl mx-auto font-medium mb-12 leading-relaxed">
          A human-grade AI voice + text agent that answers calls, qualifies leads, and books your calendar 24/7 — so you stop losing money to missed calls.
        </p>
        <div class="flex flex-col md:flex-row items-center justify-center gap-6">
          <a
            href="/contact"
            class="w-full md:w-auto bg-cyan-600 hover:bg-cyan-500 text-white px-10 py-5 rounded-full font-black uppercase tracking-[0.2em] shadow-xl shadow-cyan-600/20 transition-all flex items-center justify-center gap-3 hover:scale-[1.02]"
          >
            Book Implementation Call <ArrowRight class="w-4 h-4" />
          </a>
          <a href="#voice" class="w-full md:w-auto px-10 py-5 rounded-full font-black uppercase tracking-[0.2em] border border-white/10 hover:bg-white/5 transition-all text-center">
            Hear the demo
          </a>
        </div>

        <!-- Trust / Risk reducers -->
        <div class="mt-10 max-w-5xl mx-auto grid grid-cols-1 sm:grid-cols-3 gap-4 text-left">
          <div class="cyber-glass border border-white/5 bg-white/[0.02] rounded-3xl p-6">
            <div class="flex items-center gap-3 text-cyan-500 mb-3">
              <Clock class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-[0.35em]">Fast_Setup</span>
            </div>
            <div class="text-white font-black tracking-tight">Live in minutes</div>
            <div class="mt-2 text-slate-500 text-sm font-medium leading-relaxed">
              We wire your AI agent to your phone + calendar + follow-up so it can book outcomes, not just “answer calls”.
            </div>
          </div>
          <div class="cyber-glass border border-white/5 bg-white/[0.02] rounded-3xl p-6">
            <div class="flex items-center gap-3 text-cyan-500 mb-3">
              <ShieldCheck class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-[0.35em]">Full_Control</span>
            </div>
            <div class="text-white font-black tracking-tight">Your rules</div>
            <div class="mt-2 text-slate-500 text-sm font-medium leading-relaxed">
              Qualification, availability, pricing guidelines, escalation — it follows your playbook and can handoff anytime.
            </div>
          </div>
          <div class="cyber-glass border border-white/5 bg-white/[0.02] rounded-3xl p-6">
            <div class="flex items-center gap-3 text-cyan-500 mb-3">
              <CalendarCheck2 class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-[0.35em]">Booked_Results</span>
            </div>
            <div class="text-white font-black tracking-tight">Books the calendar</div>
            <div class="mt-2 text-slate-500 text-sm font-medium leading-relaxed">
              The goal is simple: convert inbound interest into booked appointments and clean CRM records.
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Voice Preview Demo (has id="voice" inside component) -->
    <VoicePreview client:visible />

    <!-- Buying Decision: What it replaces / what you get -->
    <section class="py-24 md:py-32 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 md:gap-16 items-start">
          <div class="cyber-glass border border-white/5 bg-white/[0.02] rounded-[40px] p-8 md:p-12">
            <div class="flex items-center gap-3 mb-6 text-cyan-500">
              <PhoneCall class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">The_Problem</span>
            </div>
            <h2 class="text-3xl md:text-5xl font-display font-black tracking-tighter text-white leading-[0.95]">
              MISSED CALLS <br /> KILL GROWTH.
            </h2>
            <p class="mt-4 text-slate-500 text-sm md:text-lg font-medium leading-relaxed">
              If you miss the first 30 seconds, you usually lose the job. Agent Broski answers instantly, qualifies intent, and routes the lead into a booked outcome.
            </p>
            <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 gap-4">
              {[
                { icon: PhoneCall, title: "Answers every call", desc: "No voicemail leak. No ring-and-bail." },
                { icon: MessagesSquare, title: "Texts instantly", desc: "Follow-up built-in so leads don’t go cold." },
                { icon: CalendarCheck2, title: "Books appointments", desc: "Real-time availability and scheduling." },
                { icon: Bot, title: "Qualifies intent", desc: "Asks the right questions, captures details." },
              ].map((item) => (
                <div class="p-5 rounded-3xl border border-white/5 bg-white/[0.02] hover:bg-white/[0.04] transition-all">
                  <div class="w-11 h-11 rounded-2xl bg-cyan-500/10 border border-cyan-500/20 flex items-center justify-center text-cyan-400 mb-4">
                    <item.icon class="w-5 h-5" />
                  </div>
                  <div class="text-white font-black tracking-tight">{item.title}</div>
                  <div class="mt-1 text-slate-500 text-sm font-medium leading-relaxed">{item.desc}</div>
                </div>
              ))}
            </div>
          </div>

          <div class="cyber-glass border border-white/5 bg-white/[0.02] rounded-[40px] p-8 md:p-12">
            <div class="flex items-center gap-3 mb-6 text-cyan-500">
              <Zap class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">The_Outcome</span>
            </div>
            <h3 class="text-3xl md:text-5xl font-display font-black tracking-tighter text-white leading-[0.95]">
              YOUR FRONT DESK, <br /> ON AUTOPILOT.
            </h3>
            <p class="mt-4 text-slate-500 text-sm md:text-lg font-medium leading-relaxed">
              Broski doesn’t “chat”. It converts. You get cleaner pipelines, higher booking rates, and fewer dropped leads — without hiring.
            </p>
            <div class="mt-8 space-y-4">
              {[
                "Captures name, service need, timeframe, and location",
                "Handles basic objections and pricing guardrails",
                "Updates CRM notes + tags automatically",
                "Transfers to a human when needed",
                "Records + transcripts every conversation for QA",
              ].map((line) => (
                <div class="flex items-start gap-4 p-5 rounded-3xl bg-white/[0.02] border border-white/5">
                  <div class="w-10 h-10 rounded-2xl bg-cyan-600/10 flex items-center justify-center text-cyan-500 flex-shrink-0">
                    <Sparkles class="w-5 h-5" />
                  </div>
                  <div class="text-slate-300 font-medium leading-relaxed">{line}</div>
                </div>
              ))}
            </div>
            <div class="mt-8 flex flex-col sm:flex-row gap-4">
              <a
                href="/contact"
                class="w-full sm:w-auto bg-cyan-600 hover:bg-cyan-500 transition-all text-white px-8 py-4 rounded-full font-black uppercase tracking-[0.2em] text-[11px] shadow-[0_0_40px_-10px_rgba(6,182,212,0.4)] text-center"
              >
                Book Implementation Call
              </a>
              <a
                href="/industries"
                class="w-full sm:w-auto px-8 py-4 rounded-full font-black uppercase tracking-[0.2em] text-[11px] border border-white/10 hover:bg-white/5 transition-all text-center"
              >
                Explore Industry Models
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Capabilities Grid -->
    <section id="features" class="py-24 md:py-32 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-14 md:mb-20">
          <div class="inline-flex items-center gap-2 bg-cyan-500/10 border border-cyan-500/20 px-4 py-1.5 rounded-full text-[10px] uppercase tracking-[0.4em] font-black text-cyan-400 mb-6">
            <Sparkles class="w-3 h-3" />
            <span>Core_Features</span>
          </div>
          <h2 class="text-4xl md:text-6xl font-display font-black tracking-tighter text-white">
            BUILT TO <span class="text-cyan-500 italic">BOOK.</span>
          </h2>
          <p class="mt-4 max-w-2xl mx-auto text-slate-500 text-sm md:text-lg font-medium leading-relaxed">
            Human-grade conversations, business-rule control, and real integrations — not a chatbot.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {[
            { title: "Instant response", desc: "No hold music. No voicemail. Broski answers fast and keeps the lead engaged." },
            { title: "Smart qualification", desc: "Asks the right questions, captures details, and flags high intent automatically." },
            { title: "Auto booking", desc: "Syncs with your calendar and schedules appointments without human input." }
          ].map((benefit) => (
            <div class="p-10 rounded-[40px] cyber-glass border border-white/5 bg-white/[0.02] hover:bg-white/[0.04] transition-all">
              <Sparkles class="w-8 h-8 text-cyan-500 mb-6" />
              <h3 class="text-2xl font-black mb-4 uppercase tracking-tight">{benefit.title}</h3>
              <p class="text-slate-500 font-medium leading-relaxed">
                {benefit.desc}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Feature Deep Dive -->
    <section class="py-32 px-6 bg-white/[0.01] border-y border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
          <div>
            <div class="flex items-center gap-3 mb-8 text-cyan-500">
              <Bot class="w-4 h-4 animate-pulse" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">Neural_Processing</span>
            </div>
            <h2 class="text-5xl font-display font-black tracking-tighter mb-8 leading-tight">
              NEVER MISS <br />
              ANOTHER LEAD.
            </h2>
            <div class="space-y-6">
              {["Natural language processing", "Direct calendar integration", "SMS follow-up automation", "Multilingual support", "Outbound & Inbound capability"].map((feature) => (
                <div class="flex items-center gap-4 p-6 rounded-2xl bg-white/[0.02] border border-white/5">
                  <div class="w-10 h-10 rounded-xl bg-cyan-600/10 flex items-center justify-center text-cyan-500">
                    <Zap class="w-5 h-5" />
                  </div>
                  <span class="text-lg font-bold uppercase tracking-wider">{feature}</span>
                </div>
              ))}
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 bg-cyan-500/10 blur-[100px] rounded-full"></div>
            <div class="relative rounded-[48px] border border-white/10 p-1 bg-gradient-to-br from-white/[0.1] to-transparent overflow-hidden">
              <div class="p-12 bg-neutral-950/50 backdrop-blur-3xl">
                <div class="flex items-center gap-4 mb-10">
                  <Bot class="w-8 h-8 text-cyan-500" />
                  <div class="h-[2px] flex-1 bg-gradient-to-r from-cyan-500/50 to-transparent"></div>
                </div>
                <div class="space-y-8">
                  <div class="p-6 rounded-3xl bg-cyan-600/10 border border-cyan-500/20 text-cyan-100 font-medium italic">
                    "Analyzing prospect sentiment... High intent detected. Scheduling consultation for 2:00 PM Thursday."
                  </div>
                  <div class="p-6 rounded-3xl bg-white/[0.03] border border-white/5 text-slate-400 font-medium">
                    Agent Broski manages the entire front-of-house experience so you can focus on closing deals.
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- System: show the larger automation loop -->
    <AutomationEngine client:visible />

    <!-- Objection handling / FAQ -->
    <FAQ client:visible />

    <!-- Final CTA -->
    <section class="py-40 px-6">
      <div class="max-w-4xl mx-auto text-center rounded-[60px] bg-cyan-600 p-20 relative overflow-hidden shadow-2xl shadow-cyan-600/40">
        <div class="absolute top-0 right-0 p-10 opacity-20 text-white">
           <Mic2 class="w-40 h-40" />
        </div>
        <div class="relative z-10">
          <h2 class="text-4xl md:text-6xl font-display font-black tracking-tighter text-white mb-8 uppercase">
            READY TO SCALE <br /> WITHOUT THE HIRING?
          </h2>
          <a href="/contact" class="inline-flex items-center justify-center bg-white text-cyan-600 px-12 py-6 rounded-full font-black uppercase tracking-[0.2em] hover:scale-105 transition-all shadow-xl">
            Book Implementation Call
          </a>
        </div>
      </div>
    </section>

    <FloatingMenu client:load pathname={pathname} />
    <Footer client:visible />
  </main>
</BaseLayout>
