---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer';
import Navbar from '../components/Navbar';
import FloatingMenu from '../components/FloatingMenu';
import ReviewCalculator from '../components/ReviewCalculator.astro';
import { Star, MessageSquare, ShieldCheck, TrendingUp, ArrowRight, Zap, Activity, CheckCircle2, CreditCard } from 'lucide-react';

const pathname = "/reputation";
---

<BaseLayout title="RevuBro | Reputation AI | Brobot Media">
  <main class="min-h-screen bg-[#020617] text-white pt-20 md:pt-32 pb-12 md:pb-20">
    <Navbar client:load pathname={pathname} />
    
    <!-- Hero Section -->
    <section class="relative px-4 md:px-6 py-16 md:py-24 lg:py-32 overflow-hidden">
      <div class="absolute inset-0 bg-emerald-500/5 blur-[120px] rounded-full scale-150 -z-10"></div>
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 md:gap-16 lg:gap-20 items-center">
          <!-- Left: Primary pitch -->
          <div>
            <div class="flex justify-center lg:justify-start mb-8 md:mb-10">
              <div class="w-20 h-20 md:w-24 md:h-24 rounded-3xl bg-emerald-600/10 border border-emerald-500/20 flex items-center justify-center text-emerald-500 shadow-[0_0_50px_-10px_rgba(16,185,129,0.3)]">
                <Star class="w-10 h-10 md:w-12 md:h-12" />
              </div>
            </div>

            <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display font-black tracking-tighter mb-6 md:mb-8 leading-[1.05] text-center lg:text-left">
              GET MORE REVIEWS, <br />
              RANK HIGHER, <span class="text-emerald-500 italic uppercase">GROW FASTER</span>
            </h1>

            <p class="text-lg sm:text-xl md:text-2xl text-slate-400 font-medium mb-8 md:mb-10 leading-relaxed text-center lg:text-left">
              RevuBro automates review requests, helps you respond faster with AI, and turns feedback into more trust and more customers.
            </p>

            <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 mb-8 md:mb-10">
              <div class="cyber-glass border border-white/5 bg-white/[0.02] rounded-2xl p-4 text-center">
                <div class="text-[10px] font-black uppercase tracking-[0.3em] text-emerald-400 mb-2">Pricing</div>
                <div class="text-sm font-bold text-white/90">From $97/mo</div>
              </div>
              <div class="cyber-glass border border-white/5 bg-white/[0.02] rounded-2xl p-4 text-center">
                <div class="text-[10px] font-black uppercase tracking-[0.3em] text-emerald-400 mb-2">Workflow</div>
                <div class="text-sm font-bold text-white/90">Automated</div>
              </div>
              <div class="cyber-glass border border-white/5 bg-white/[0.02] rounded-2xl p-4 text-center">
                <div class="text-[10px] font-black uppercase tracking-[0.3em] text-emerald-400 mb-2">Goal</div>
                <div class="text-sm font-bold text-white/90">More 5-star proof</div>
              </div>
            </div>

            <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4">
              <a
                href="/contact"
                class="w-full sm:w-auto bg-emerald-600 hover:bg-emerald-500 text-white px-10 md:px-12 py-5 md:py-6 rounded-full font-black uppercase tracking-[0.2em] text-sm md:text-base shadow-[0_0_50px_-10px_rgba(16,185,129,0.5)] transition-all flex items-center justify-center gap-3 hover:scale-105"
              >
                Book To Activate <ArrowRight class="w-5 h-5" />
              </a>
              <a
                href="#pricing"
                class="w-full sm:w-auto px-10 md:px-12 py-5 md:py-6 rounded-full font-black uppercase tracking-[0.2em] text-sm md:text-base border border-white/10 hover:bg-white/5 transition-all text-center"
              >
                See Pricing
              </a>
              <a
                href="#calculator"
                class="w-full sm:w-auto px-10 md:px-12 py-5 md:py-6 rounded-full font-black uppercase tracking-[0.2em] text-sm md:text-base border border-white/10 hover:bg-white/5 transition-all text-center"
              >
                Review Calculator
              </a>
            </div>

            <p class="text-xs sm:text-sm text-slate-500 font-medium mt-6 text-center lg:text-left leading-relaxed">
              Book an onboarding call. After the call, we process payment via Stripe and activate your plan.
            </p>
          </div>

          <!-- Right: social proof panel -->
          <div class="relative">
            <div class="absolute inset-0 bg-emerald-500/10 blur-[120px] rounded-full"></div>
            <div class="relative rounded-[32px] md:rounded-[40px] border border-white/10 p-1 bg-gradient-to-br from-white/[0.1] to-transparent overflow-hidden shadow-2xl">
              <div class="p-10 md:p-12 bg-neutral-950/50 backdrop-blur-3xl rounded-[28px] md:rounded-[36px]">
                <div class="flex items-center gap-4 mb-10">
                  <Star class="w-8 h-8 text-emerald-500" />
                  <div class="h-[2px] flex-1 bg-gradient-to-r from-emerald-500/50 to-transparent"></div>
                </div>
                <div class="space-y-8">
                  <div class="flex justify-center gap-2">
                    {[1, 2, 3, 4, 5].map(() => (
                      <Star class="w-10 h-10 text-emerald-500 fill-emerald-500" />
                    ))}
                  </div>
                  <div class="p-6 rounded-3xl bg-emerald-600/10 border border-emerald-500/20 text-emerald-100 font-medium italic text-center">
                    "Consistent 5-star reviews build trust and drive new customer acquisition on autopilot."
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    <div class="p-4 rounded-2xl bg-white/[0.03] border border-white/5 text-center">
                      <div class="text-2xl font-black text-white">92%</div>
                      <div class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-500 mt-2">Read Reviews</div>
                    </div>
                    <div class="p-4 rounded-2xl bg-white/[0.03] border border-white/5 text-center">
                      <div class="text-2xl font-black text-white">72%</div>
                      <div class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-500 mt-2">Need Positive</div>
                    </div>
                    <div class="p-4 rounded-2xl bg-white/[0.03] border border-white/5 text-center">
                      <div class="text-2xl font-black text-white">84%</div>
                      <div class="text-[10px] font-black uppercase tracking-[0.2em] text-slate-500 mt-2">Trust Like Friend</div>
                    </div>
                  </div>
                  <div class="text-xs text-slate-500 font-medium leading-relaxed text-center">
                    These are widely-cited local review benchmarks. We use them to build an automation system that produces consistent social proof.
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Reviews Matter -->
    <section id="reviews" class="py-20 md:py-32 lg:py-40 px-4 md:px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12 md:mb-20 lg:mb-24">
          <p class="text-[9px] font-black uppercase tracking-[0.5em] text-emerald-500 mb-6">
            Buying_Decision_Data
          </p>
          <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display font-black tracking-tighter mb-6 md:mb-8 leading-[1.05]">
            WHY GOOGLE REVIEWS <span class="text-emerald-500 italic">MATTER</span>
          </h2>
          <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-slate-400 max-w-4xl mx-auto font-medium leading-relaxed">
            Reviews are the fastest trust signal in local search. More reviews, better responses, and steady velocity directly impact conversion rates and visibility.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 md:gap-8">
          {[
            { stat: "92%", label: "Consumers read reviews" },
            { stat: "72%", label: "Won't act without positive" },
            { stat: "54%", label: "More revenue with 40+ reviews" },
            { stat: "84%", label: "Trust like a recommendation" },
          ].map((item) => (
            <div class="cyber-glass p-8 md:p-10 rounded-[32px] md:rounded-[40px] border border-white/5 bg-white/[0.02] text-center">
              <div class="text-4xl md:text-5xl font-black text-white tracking-tight">{item.stat}</div>
              <div class="text-slate-500 font-medium leading-relaxed mt-4 text-sm md:text-base">{item.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Review Calculator -->
    <section id="calculator" class="py-20 md:py-32 lg:py-40 px-4 md:px-6 bg-white/[0.01] border-y border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12 md:mb-16 lg:mb-20">
          <p class="text-[9px] font-black uppercase tracking-[0.5em] text-emerald-500 mb-6">
            Review_Benchmarking
          </p>
          <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display font-black tracking-tighter mb-6 md:mb-8 leading-[1.05]">
            HOW MANY REVIEWS <br />
            DO YOU <span class="text-emerald-500 italic">NEED</span>?
          </h2>
          <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-slate-400 max-w-4xl mx-auto font-medium leading-relaxed">
            Use the calculator to estimate growth goals based on your current rating and review count.
          </p>
        </div>

        <ReviewCalculator />

        <div class="mt-8 md:mt-10 text-center">
          <p class="text-xs sm:text-sm text-slate-500 font-medium leading-relaxed max-w-4xl mx-auto">
            Estimates are directional and depend on category, competition, and local market dynamics.
          </p>
        </div>
      </div>
    </section>

    <!-- Automation -->
    <section id="automation" class="py-20 md:py-32 lg:py-40 px-4 md:px-6 bg-white/[0.01] border-y border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12 md:mb-20 lg:mb-24">
          <p class="text-[9px] font-black uppercase tracking-[0.5em] text-emerald-500 mb-6">
            Reputation_Automation
          </p>
          <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display font-black tracking-tighter mb-6 md:mb-8 leading-[1.05]">
            AUTOMATE THE SYSTEM <br />
            THAT EARNS <span class="text-emerald-500 italic">TRUST</span>
          </h2>
          <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-slate-400 max-w-4xl mx-auto font-medium leading-relaxed">
            RevuBro is built around three levers: request consistently, respond professionally, and route feedback so issues get resolved fast.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
          {[
            {
              title: "Automated Review Requests",
              desc: "Send personalized SMS and email review invites at the right moment, without you chasing customers.",
              icon: MessageSquare,
            },
            {
              title: "AI-Powered Responses",
              desc: "Generate fast, on-brand responses so every review gets acknowledged and trust compounds over time.",
              icon: Zap,
            },
            {
              title: "Smart Review Routing",
              desc: "Capture private feedback and route issues to the right place so your team can resolve problems quickly.",
              icon: ShieldCheck,
            },
          ].map((feature) => (
            <div class="group cyber-glass p-8 md:p-12 rounded-[32px] md:rounded-[48px] border border-white/5 hover:border-white/10 transition-all flex flex-col h-full">
              <div class="w-16 h-16 md:w-20 md:h-20 rounded-2xl md:rounded-3xl bg-emerald-600/10 border border-emerald-500/20 flex items-center justify-center mb-8 md:mb-10 group-hover:scale-110 transition-transform mx-auto">
                <feature.icon class="w-8 h-8 md:w-10 md:h-10 text-emerald-500" />
              </div>
              <h3 class="text-lg md:text-xl font-black text-white mb-4 tracking-widest font-display italic text-center">{feature.title}</h3>
              <p class="text-slate-500 text-sm md:text-base font-medium leading-relaxed text-center flex-grow">
                {feature.desc}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Trust / Differentiation -->
    <section id="differentiation" class="py-20 md:py-32 lg:py-40 px-4 md:px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 md:gap-16 lg:gap-24 items-center">
          <div>
            <div class="flex items-center gap-3 mb-8 text-emerald-500">
              <Activity class="w-4 h-4 animate-pulse" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">Trust_Protocol</span>
            </div>
            <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display font-black tracking-tighter mb-6 md:mb-8 leading-[1.05] text-center lg:text-left">
              REVIEWS DRIVE <br />
              <span class="text-emerald-500 italic">REVENUE</span>.
            </h2>
            <p class="text-base sm:text-lg md:text-xl text-slate-400 font-medium leading-relaxed mb-10 md:mb-12 text-center lg:text-left">
              RevuBro makes it hard for customers to forget you. We help you request reviews consistently, reply with speed and clarity, and turn feedback into repeatable trust.
            </p>

            <div class="space-y-4">
              {[
                "Automated timing after each transaction",
                "Multi-channel requests (text + email)",
                "AI response suggestions to stay consistent",
                "Dashboard visibility into review velocity",
                "Routing to help resolve issues quickly",
              ].map((feature) => (
                <div class="flex items-center gap-4 p-5 md:p-6 rounded-2xl bg-white/[0.02] border border-white/5">
                  <div class="w-10 h-10 rounded-xl bg-emerald-600/10 flex items-center justify-center text-emerald-500 flex-shrink-0">
                    <CheckCircle2 class="w-5 h-5" />
                  </div>
                  <span class="text-sm md:text-base font-bold uppercase tracking-wider text-white/90">{feature}</span>
                </div>
              ))}
            </div>

            <div class="mt-10 md:mt-12 text-center lg:text-left">
              <a
                href="/contact"
                class="inline-flex items-center justify-center bg-emerald-600 hover:bg-emerald-500 transition-all text-white px-10 md:px-12 py-5 md:py-6 rounded-full font-black uppercase tracking-[0.2em] text-sm md:text-base shadow-[0_0_50px_-10px_rgba(16,185,129,0.5)] hover:scale-105"
              >
                Book To Activate <ArrowRight class="w-5 h-5 ml-3" />
              </a>
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 bg-emerald-500/10 blur-[100px] rounded-full"></div>
            <div class="relative rounded-[48px] border border-white/10 p-1 bg-gradient-to-br from-white/[0.1] to-transparent overflow-hidden">
              <div class="p-12 bg-neutral-950/50 backdrop-blur-3xl">
                <div class="flex items-center gap-4 mb-10">
                  <Star class="w-8 h-8 text-emerald-500" />
                  <div class="h-[2px] flex-1 bg-gradient-to-r from-emerald-500/50 to-transparent"></div>
                </div>
                <div class="space-y-8">
                  <div class="flex justify-center gap-2">
                    {[1, 2, 3, 4, 5].map((i) => (
                      <Star class="w-10 h-10 text-emerald-500 fill-emerald-500" />
                    ))}
                  </div>
                  <div class="p-6 rounded-3xl bg-emerald-600/10 border border-emerald-500/20 text-emerald-100 font-medium italic text-center">
                    "Rating increased from 3.8 to 4.9 stars in 90 days."
                  </div>
                  <div class="p-6 rounded-3xl bg-white/[0.03] border border-white/5 text-slate-400 font-medium leading-relaxed text-center">
                    When review velocity is consistent and responses are timely, customers trust you faster. Rankings follow trust.
                  </div>
                  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="p-5 rounded-2xl bg-white/[0.03] border border-white/5">
                      <div class="flex items-center gap-3 text-emerald-400 mb-2">
                        <TrendingUp class="w-4 h-4" />
                        <div class="text-[10px] font-black uppercase tracking-[0.3em]">Outcome</div>
                      </div>
                      <div class="text-white font-black tracking-tight">Higher conversion rates</div>
                      <div class="text-slate-500 font-medium text-sm mt-1 leading-relaxed">More people click, call, and book when your profile looks active.</div>
                    </div>
                    <div class="p-5 rounded-2xl bg-white/[0.03] border border-white/5">
                      <div class="flex items-center gap-3 text-emerald-400 mb-2">
                        <MessageSquare class="w-4 h-4" />
                        <div class="text-[10px] font-black uppercase tracking-[0.3em]">Outcome</div>
                      </div>
                      <div class="text-white font-black tracking-tight">Less time spent on reviews</div>
                      <div class="text-slate-500 font-medium text-sm mt-1 leading-relaxed">Automation handles the repetitive tasks without dropping the ball.</div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How it works -->
    <section class="py-20 md:py-32 lg:py-40 px-4 md:px-6 bg-white/[0.01] border-y border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12 md:mb-20 lg:mb-24">
          <p class="text-[9px] font-black uppercase tracking-[0.5em] text-emerald-500 mb-6">
            Setup_Flow
          </p>
          <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display font-black tracking-tighter mb-6 md:mb-8 leading-[1.05]">
            GET STARTED IN <span class="text-emerald-500 italic">3 STEPS</span>
          </h2>
          <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-slate-400 max-w-4xl mx-auto font-medium leading-relaxed">
            Simple onboarding, clear setup, and a repeatable system that runs in the background while you run your business.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
          {[
            { step: "1", title: "Connect + customize", desc: "Book onboarding, connect your profiles, and choose your request channels and branding." },
            { step: "2", title: "Automate invites", desc: "Automatically send review requests after each customer interaction via text or email." },
            { step: "3", title: "Watch reviews grow", desc: "Build steady review velocity and respond faster with AI so trust compounds month after month." },
          ].map((item) => (
            <div class="cyber-glass p-8 md:p-12 rounded-[32px] md:rounded-[48px] border border-white/5 bg-white/[0.02] flex flex-col h-full">
              <div class="w-14 h-14 md:w-16 md:h-16 rounded-2xl bg-emerald-600/10 border border-emerald-500/20 flex items-center justify-center mx-auto mb-8">
                <div class="text-emerald-300 font-black text-xl md:text-2xl">{item.step}</div>
              </div>
              <h3 class="text-lg md:text-xl font-black text-white mb-4 tracking-widest font-display italic text-center uppercase">{item.title}</h3>
              <p class="text-slate-500 text-sm md:text-base font-medium leading-relaxed text-center flex-grow">{item.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section id="pricing" class="py-20 md:py-32 lg:py-40 px-4 md:px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12 md:mb-20 lg:mb-24">
          <p class="text-[9px] font-black uppercase tracking-[0.5em] text-emerald-500 mb-6">
            Plans_And_Billing
          </p>
          <h2 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-display font-black tracking-tighter mb-6 md:mb-8 leading-[1.05]">
            AFFORDABLE PLANS <br />
            FOR <span class="text-emerald-500 italic">EVERY BUSINESS</span>
          </h2>
          <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-slate-400 max-w-4xl mx-auto font-medium leading-relaxed">
            Choose a plan, book onboarding, and we will activate your workflow. Payment is processed after the call.
          </p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 md:gap-8">
          {[
            {
              name: "Starter",
              price: "$97",
              cadence: "/mo",
              topLine: "10-50 requests per month",
              includes: [
                "1 review account connection",
                "Review response AI",
                "Personalized images",
                "Social review posting",
                "Automated requests",
                "CRM integration",
                "Review routing system",
              ],
              highlight: false,
            },
            {
              name: "Growth",
              price: "$197",
              cadence: "/mo",
              topLine: "50-100 requests per month",
              includes: [
                "Review response AI",
                "Personalized images",
                "Social review posting",
                "Automated requests",
                "CRM integration",
                "Review routing system",
                "YEXT integration (value add)",
                "Up to 3 account connections (value add)",
              ],
              highlight: true,
            },
            {
              name: "Pro",
              price: "$297",
              cadence: "/mo",
              topLine: "100-300+ requests per month",
              includes: [
                "Review response AI",
                "Personalized images",
                "Social review posting",
                "Automated requests",
                "CRM integration",
                "Review routing system",
                "YEXT integration (value add)",
                "Up to 5 account connections (value add)",
              ],
              highlight: false,
            },
          ].map((plan) => (
            <div class={`cyber-glass p-8 md:p-10 lg:p-12 rounded-[32px] md:rounded-[48px] border transition-all flex flex-col h-full ${plan.highlight ? "border-emerald-500/30 bg-emerald-500/5 shadow-[0_0_50px_-10px_rgba(16,185,129,0.25)]" : "border-white/5 bg-white/[0.02]"}`}>
              <div class="flex items-center justify-between mb-6">
                <div class="text-white font-black tracking-tight text-2xl">{plan.name}</div>
                <div class="text-[9px] font-black uppercase tracking-[0.35em] text-slate-400">Plan</div>
              </div>

              <div class="mb-6">
                <div class="flex items-end gap-2">
                  <div class="text-5xl font-black text-white tracking-tight">{plan.price}</div>
                  <div class="text-slate-500 font-bold mb-2">{plan.cadence}</div>
                </div>
                <div class="text-slate-400 font-medium mt-3">{plan.topLine}</div>
              </div>

              <ul class="space-y-3 mb-10">
                {plan.includes.map((item) => (
                  <li class="flex items-start gap-3">
                    <CheckCircle2 class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" />
                    <span class="text-slate-400 font-medium text-sm md:text-base leading-relaxed">{item}</span>
                  </li>
                ))}
              </ul>

              <div class="mt-auto space-y-3">
                <a
                  href="/contact"
                  class={`w-full inline-flex items-center justify-center px-8 py-4 rounded-full font-black uppercase tracking-[0.2em] text-[11px] transition-all ${plan.highlight ? "bg-emerald-600 hover:bg-emerald-500 text-white shadow-[0_0_40px_-15px_rgba(16,185,129,0.7)]" : "bg-white text-emerald-700 hover:bg-white/90"}`}
                >
                  Book To Activate <ArrowRight class="w-4 h-4 ml-3" />
                </a>
                <div class="text-xs text-slate-500 font-medium leading-relaxed text-center">
                  After the call, we process payment via Stripe.
                </div>
              </div>
            </div>
          ))}
