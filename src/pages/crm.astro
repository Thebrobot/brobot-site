---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer';
import Navbar from '../components/Navbar';
import FloatingMenu from '../components/FloatingMenu';
import { LayoutDashboard, Users, Zap, BarChart3, ArrowRight, Activity } from 'lucide-react';

const pathname = "/crm";
---

<BaseLayout title="Brobot CRM | The Command Center | Brobot Media">
  <main class="min-h-screen bg-[#020617] text-white pt-32 pb-20">
    <Navbar client:load pathname={pathname} />
    
    <!-- Hero Section -->
    <section class="relative px-6 py-20 overflow-hidden">
      <div class="absolute inset-0 bg-indigo-500/5 blur-[120px] rounded-full scale-150 -z-10"></div>
      <div class="max-w-7xl mx-auto text-center">
        <div class="flex justify-center mb-8">
          <div class="w-20 h-20 rounded-3xl bg-indigo-600/10 border border-indigo-500/20 flex items-center justify-center text-indigo-500 shadow-[0_0_50px_-10px_rgba(99,102,241,0.3)]">
            <LayoutDashboard class="w-10 h-10" />
          </div>
        </div>
        <h1 class="text-6xl md:text-8xl font-display font-black tracking-tighter mb-6 leading-tight">
          THE ULTIMATE <br />
          <span class="text-indigo-500 italic uppercase">COMMAND CENTER</span>
        </h1>
        <p class="text-xl md:text-2xl text-slate-400 max-w-3xl mx-auto font-medium mb-12 leading-relaxed">
          White-labeled power built to track leads, automate follow-ups, and drive ROI. Every interaction, every dollar, one dashboard.
        </p>
        <div class="flex flex-col md:flex-row items-center justify-center gap-6">
          <button class="w-full md:w-auto bg-indigo-600 hover:bg-indigo-500 text-white px-10 py-5 rounded-full font-black uppercase tracking-[0.2em] shadow-xl shadow-indigo-600/20 transition-all flex items-center justify-center gap-3">
            Enter the Command Center <ArrowRight class="w-4 h-4" />
          </button>
        </div>
      </div>
    </section>

    <!-- Platform Features -->
    <section id="platform" class="py-32 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
          {[
            { icon: LayoutDashboard, title: "Lead Tracking", desc: "Every lead from every source, in one beautiful pipeline." },
            { icon: Users, title: "Client Portal", desc: "Give your clients a premium experience with their own dashboard." },
            { icon: Zap, title: "Workflow Magic", desc: "Automate your entire sales process with drag-and-drop ease." },
            { icon: BarChart3, title: "ROI Analytics", desc: "Know exactly which marketing channels are making you money." },
          ].map((feature) => (
            <div class="p-8 rounded-[32px] cyber-glass border border-white/5 bg-white/[0.02] hover:bg-white/[0.04] transition-all">
              <feature.icon class="h-8 w-8 text-indigo-500 mb-6" />
              <h3 class="text-xl font-black mb-3 uppercase tracking-tight">{feature.title}</h3>
              <p class="text-slate-500 text-sm font-medium leading-relaxed">{feature.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Why CRM Section -->
    <section class="py-32 px-6 bg-white/[0.01] border-y border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
          <div>
            <div class="flex items-center gap-3 mb-8 text-indigo-500">
              <Activity class="w-4 h-4 animate-pulse" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">Central_Intelligence</span>
            </div>
            <h2 class="text-5xl font-display font-black tracking-tighter mb-8 leading-tight">
              ONE DASHBOARD. <br />
              TOTAL CONTROL.
            </h2>
            <p class="text-slate-400 text-lg font-medium leading-relaxed mb-12">
              Stop juggling spreadsheets, missed follow-ups, and scattered data. Brobot CRM gives you a 360Â° view of your entire operation.
            </p>
            <div class="space-y-6">
              {["Pipeline Management", "Automated Workflows", "Client Communication Hub", "Revenue Attribution", "Team Collaboration"].map((feature) => (
                <div class="flex items-center gap-4 p-6 rounded-2xl bg-white/[0.02] border border-white/5">
                  <div class="w-10 h-10 rounded-xl bg-indigo-600/10 flex items-center justify-center text-indigo-500">
                    <Zap class="w-5 h-5" />
                  </div>
                  <span class="text-lg font-bold uppercase tracking-wider">{feature}</span>
                </div>
              ))}
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 bg-indigo-500/10 blur-[100px] rounded-full"></div>
            <div class="relative rounded-[48px] border border-white/10 p-1 bg-gradient-to-br from-white/[0.1] to-transparent overflow-hidden">
              <div class="p-12 bg-neutral-950/50 backdrop-blur-3xl">
                <div class="flex items-center gap-4 mb-10">
                  <LayoutDashboard class="w-8 h-8 text-indigo-500" />
                  <div class="h-[2px] flex-1 bg-gradient-to-r from-indigo-500/50 to-transparent"></div>
                </div>
                <div class="space-y-8">
                  <div class="p-6 rounded-3xl bg-indigo-600/10 border border-indigo-500/20 text-indigo-100 font-medium italic">
                    "32 new leads this week. 14 appointments booked. $47,000 in projected revenue."
                  </div>
                  <div class="p-6 rounded-3xl bg-white/[0.03] border border-white/5 text-slate-400 font-medium">
                    Your entire business, organized and automated from a single command center.
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="py-40 px-6">
      <div class="max-w-4xl mx-auto text-center rounded-[60px] bg-indigo-600 p-20 relative overflow-hidden shadow-2xl shadow-indigo-600/40">
        <div class="absolute top-0 right-0 p-10 opacity-20 text-white">
           <LayoutDashboard class="w-40 h-40" />
        </div>
        <div class="relative z-10">
          <h2 class="text-4xl md:text-6xl font-display font-black tracking-tighter text-white mb-8 uppercase">
            READY TO TAKE <br /> COMMAND?
          </h2>
          <button class="bg-white text-indigo-600 px-12 py-6 rounded-full font-black uppercase tracking-[0.2em] hover:scale-105 transition-all shadow-xl">
            Launch Your CRM
          </button>
        </div>
      </div>
    </section>

    <FloatingMenu client:load pathname={pathname} />
    <Footer client:visible />
  </main>
</BaseLayout>
