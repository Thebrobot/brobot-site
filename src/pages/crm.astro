---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer';
import Navbar from '../components/Navbar';
import FloatingMenu from '../components/FloatingMenu';
import { 
  LayoutDashboard, 
  Users, 
  Zap, 
  BarChart3, 
  ArrowRight, 
  Activity, 
  Smartphone, 
  MessageSquare, 
  Calendar, 
  GanttChartSquare, 
  MousePointerClick, 
  Bot, 
  Layers,
  CheckCircle2,
  Star,
  Share2,
  GraduationCap,
  Receipt,
  Globe,
  Mic,
  Monitor,
  Heart
} from 'lucide-react';

const pathname = "/crm";
---

<BaseLayout title="Brobot CRM | The Ultimate Command Center | Brobot Media">
  <main class="min-h-screen bg-[#020617] text-white pt-32 pb-20">
    <Navbar client:load pathname={pathname} />
    
    <!-- Hero Section -->
    <section class="relative px-6 pt-8 md:pt-20 pb-12 md:pb-20 overflow-hidden">
      <div class="absolute inset-0 bg-indigo-500/5 blur-[120px] rounded-full scale-150 -z-10"></div>
      <div class="max-w-7xl mx-auto text-center">
        <div class="flex justify-center mb-8">
          <div class="w-20 h-20 rounded-3xl bg-indigo-600/10 border border-indigo-500/20 flex items-center justify-center text-indigo-500 shadow-[0_0_50px_-10px_rgba(99,102,241,0.3)]">
            <LayoutDashboard class="w-10 h-10" />
          </div>
        </div>
        <h1 class="text-6xl md:text-8xl font-display font-black tracking-tighter mb-6 leading-tight">
          THE ULTIMATE <br />
          <span class="text-indigo-500 italic uppercase">COMMAND CENTER</span>
        </h1>
        <p class="text-xl md:text-2xl text-white max-w-3xl mx-auto font-medium mb-6 leading-relaxed">
          Built to capture every lead, close every deal, and scale your revenue without the chaos. Every interaction, every dollar, one dashboard.
        </p>
        <p class="text-lg md:text-xl text-white max-w-3xl mx-auto font-medium mb-12 leading-relaxed">
          Run it from desktop or your phone. Pipeline, conversations, tasks, and reporting on the go.
        </p>
        <div class="flex flex-col md:flex-row items-center justify-center gap-6">
          <a href="/contact" class="w-full md:w-auto bg-indigo-600 hover:bg-indigo-500 text-white px-10 py-5 rounded-full font-black uppercase tracking-[0.2em] shadow-xl shadow-indigo-600/20 hover:shadow-indigo-600/40 transition-all flex items-center justify-center gap-3 hover:scale-105">
            Book a Demo <ArrowRight class="w-5 h-5" />
          </a>
          <a href="#platform" class="w-full md:w-auto bg-white/5 hover:bg-white/10 border-2 border-white/10 hover:border-white/20 text-white px-10 py-5 rounded-full font-black uppercase tracking-[0.2em] transition-all flex items-center justify-center gap-3">
            View Features
          </a>
        </div>
      </div>
    </section>

    <!-- Platform Features -->
    <section id="platform" class="py-16 md:py-32 px-6 relative overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-indigo-900/20 via-transparent to-transparent"></div>
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-20">
          <div class="inline-flex items-center gap-3 mb-6 px-6 py-3 rounded-full border border-indigo-500/20 bg-indigo-500/5">
            <Activity class="w-4 h-4 text-indigo-500" />
            <span class="text-[10px] font-black uppercase tracking-[0.3em] text-indigo-400">Platform_Core</span>
          </div>
          <h2 class="text-4xl md:text-5xl font-display font-black tracking-tighter text-white mb-4">
            Everything You Need. <span class="text-indigo-500 italic">Nothing You Don't.</span>
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 lg:grid-cols-6 gap-4 auto-rows-fr">
          <!-- Lead Tracking - Large -->
          <div class="group relative md:col-span-2 lg:col-span-2 p-10 rounded-[40px] bg-gradient-to-br from-indigo-600 to-indigo-800 border border-indigo-500/20 shadow-[0_8px_48px_rgba(99,102,241,0.3)] hover:shadow-[0_8px_64px_rgba(99,102,241,0.5)] hover:-translate-y-2 transition-all duration-300 overflow-hidden">
            <div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full blur-3xl"></div>
            <div class="relative z-10">
              <div class="relative w-24 h-24 mb-6">
                <div class="absolute inset-0 bg-white/20 rounded-3xl blur-xl group-hover:blur-2xl transition-all duration-300"></div>
                <div class="relative w-full h-full rounded-3xl bg-white/10 backdrop-blur-xl border border-white/20 flex items-center justify-center group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
                  <LayoutDashboard class="h-12 w-12 text-white drop-shadow-2xl" />
                </div>
              </div>
              <h3 class="text-2xl font-black mb-4 uppercase tracking-tight text-white">Lead Tracking</h3>
              <p class="text-white text-xl font-semibold leading-relaxed">Every lead from every source, in one beautiful pipeline.</p>
            </div>
          </div>

          <!-- Workflow Magic - Medium -->
          <div class="group relative md:col-span-2 lg:col-span-2 p-8 rounded-[40px] bg-[#020617] border border-white/10 shadow-[0_8px_32px_rgba(99,102,241,0.15)] hover:border-indigo-500/40 hover:shadow-[0_8px_48px_rgba(99,102,241,0.3)] hover:-translate-y-2 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 via-transparent to-purple-500/5 rounded-[40px] opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="relative w-20 h-20 mb-6">
                <div class="absolute inset-0 bg-indigo-500/30 rounded-2xl blur-lg group-hover:blur-xl transition-all duration-300"></div>
                <div class="relative w-full h-full rounded-2xl bg-indigo-500/10 border border-indigo-500/20 flex items-center justify-center group-hover:scale-110 group-hover:-rotate-6 transition-all duration-300">
                  <Zap class="h-10 w-10 text-indigo-400 drop-shadow-[0_0_8px_rgba(99,102,241,0.8)]" />
                </div>
              </div>
              <h3 class="text-xl font-black mb-3 uppercase tracking-tight text-white">Workflow Magic</h3>
              <p class="text-white text-lg font-semibold leading-relaxed">Automate your entire sales process with drag-and-drop ease.</p>
            </div>
          </div>

          <!-- ROI Analytics - Medium -->
          <div class="group relative md:col-span-2 lg:col-span-2 p-8 rounded-[40px] bg-[#020617] border border-white/10 shadow-[0_8px_32px_rgba(99,102,241,0.15)] hover:border-indigo-500/40 hover:shadow-[0_8px_48px_rgba(99,102,241,0.3)] hover:-translate-y-2 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 via-transparent to-purple-500/5 rounded-[40px] opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="relative w-20 h-20 mb-6">
                <div class="absolute inset-0 bg-emerald-500/30 rounded-2xl blur-lg group-hover:blur-xl transition-all duration-300"></div>
                <div class="relative w-full h-full rounded-2xl bg-gradient-to-br from-emerald-500/10 to-indigo-500/10 border border-emerald-500/20 flex items-center justify-center group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
                  <BarChart3 class="h-10 w-10 text-emerald-400 drop-shadow-[0_0_8px_rgba(52,211,153,0.8)]" />
                </div>
              </div>
              <h3 class="text-xl font-black mb-3 uppercase tracking-tight text-white">ROI Analytics</h3>
              <p class="text-white text-lg font-semibold leading-relaxed">Know exactly which marketing channels are making you money.</p>
            </div>
          </div>

          <!-- Client Portal - Small -->
          <div class="group relative md:col-span-2 lg:col-span-3 p-8 rounded-[40px] bg-[#020617] border border-white/10 shadow-[0_8px_32px_rgba(99,102,241,0.15)] hover:border-indigo-500/40 hover:shadow-[0_8px_48px_rgba(99,102,241,0.3)] hover:-translate-y-2 transition-all duration-300">
            <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/5 via-transparent to-purple-500/5 rounded-[40px] opacity-0 group-hover:opacity-100 transition-opacity"></div>
            <div class="relative z-10">
              <div class="relative w-20 h-20 mb-6">
                <div class="absolute inset-0 bg-purple-500/30 rounded-2xl blur-lg group-hover:blur-xl transition-all duration-300"></div>
                <div class="relative w-full h-full rounded-2xl bg-gradient-to-br from-purple-500/10 to-pink-500/10 border border-purple-500/20 flex items-center justify-center group-hover:scale-110 group-hover:-rotate-3 transition-all duration-300">
                  <Users class="h-10 w-10 text-purple-400 drop-shadow-[0_0_8px_rgba(168,85,247,0.8)]" />
                </div>
              </div>
              <h3 class="text-xl font-black mb-3 uppercase tracking-tight text-white">Client Portal</h3>
              <p class="text-white text-lg font-semibold leading-relaxed">Give your clients a premium experience with their own dashboard.</p>
            </div>
          </div>

          <!-- Mobile + Web App - Featured -->
          <div class="group relative md:col-span-2 lg:col-span-3 p-8 rounded-[40px] bg-gradient-to-br from-purple-600/90 to-indigo-600/90 border border-purple-500/20 shadow-[0_8px_48px_rgba(168,85,247,0.3)] hover:shadow-[0_8px_64px_rgba(168,85,247,0.5)] hover:-translate-y-2 transition-all duration-300 overflow-hidden">
            <div class="absolute top-0 right-0 w-48 h-48 bg-white/5 rounded-full blur-3xl"></div>
            <div class="relative z-10">
              <div class="relative w-20 h-20 mb-6">
                <div class="absolute inset-0 bg-white/20 rounded-2xl blur-xl group-hover:blur-2xl transition-all duration-300"></div>
                <div class="relative w-full h-full rounded-2xl bg-white/10 backdrop-blur-xl border border-white/20 flex items-center justify-center group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
                  <Smartphone class="h-10 w-10 text-white drop-shadow-2xl" />
                </div>
              </div>
              <h3 class="text-xl font-black mb-3 uppercase tracking-tight text-white">Mobile + Web App</h3>
              <p class="text-white text-lg font-semibold leading-relaxed">Full access from desktop or phone. View pipeline, call, text, and move deals forward from anywhere.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Deep Dive: Unified Inbox -->
    <section class="py-16 md:py-32 px-6 bg-white/[0.01] overflow-hidden">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
          <div class="relative order-2 lg:order-1">
            <div class="absolute inset-0 bg-indigo-500/10 blur-[100px] rounded-full"></div>
            <div class="relative p-8 md:p-12 rounded-[48px] border border-white/10 bg-neutral-950/50 backdrop-blur-3xl">
              <div class="space-y-6">
                {[
                  { source: "SMS Text", msg: "Hey! Just saw your ad, are you available tomorrow?", color: "text-blue-400" },
                  { source: "Facebook DM", msg: "How much do you charge for a full install?", color: "text-indigo-400" },
                  { source: "Google Chat", msg: "I'd like to book an appointment for next week.", color: "text-emerald-400" },
                  { source: "Email", msg: "New inquiry from your website form.", color: "text-amber-400" },
                ].map((item, i) => (
                  <div class={`p-6 rounded-2xl bg-white/[0.03] border border-white/5 transform translate-x-${i * 4}`}>
                    <div class={`text-[10px] font-black uppercase tracking-widest mb-2 ${item.color}`}>{item.source}</div>
                    <div class="text-white font-medium text-lg">{item.msg}</div>
                  </div>
                ))}
              </div>
            </div>
          </div>
          <div class="order-1 lg:order-2">
            <div class="flex items-center gap-3 mb-8 text-indigo-500">
              <MessageSquare class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">Unified_Communications</span>
            </div>
            <h2 class="text-5xl md:text-6xl font-display font-black tracking-tighter mb-8 leading-tight">
              ONE INBOX. <br />
              <span class="text-indigo-500 italic uppercase">NO LEAKS.</span>
            </h2>
            <p class="text-white text-xl font-medium leading-relaxed mb-12">
              Connect your SMS, Email, Facebook, and Instagram into one unified stream. You will never miss a lead again because it was hidden in a social media folder. Reply instantly from one place.
            </p>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {["Consolidated Messaging", "Two-Way SMS & Email", "GMB Chat Integration", "Facebook & Instagram DMs"].map((item) => (
                <div class="flex items-center gap-3 text-white font-bold uppercase text-sm tracking-wider">
                  <CheckCircle2 class="w-5 h-5 text-indigo-500" />
                  {item}
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Deep Dive: Scheduling -->
    <section class="py-16 md:py-32 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
          <div>
            <div class="flex items-center gap-3 mb-8 text-indigo-500">
              <Calendar class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">Automated_Booking</span>
            </div>
            <h2 class="text-5xl md:text-6xl font-display font-black tracking-tighter mb-8 leading-tight text-white">
              THE APPOINTMENT <br />
              <span class="text-indigo-500 italic uppercase">MACHINE.</span>
            </h2>
            <p class="text-white text-xl font-medium leading-relaxed mb-12">
              Ditch the back and forth. Send your booking link, let them pick a time, and the system automatically sends the confirmation, the text reminders, and the follow up messages.
            </p>
            <div class="space-y-6">
              {[
                { icon: Calendar, title: "Smart Calendars", desc: "Sync with Google or Outlook instantly." },
                { icon: MessageSquare, title: "Auto Reminders", desc: "Reduce no-shows with SMS and email alerts." },
                { icon: Receipt, title: "Deposit Collection", desc: "Collect payments at the time of booking." },
              ].map((item) => (
                <div class="group flex items-start gap-6 p-8 rounded-[32px] bg-[#020617] border-2 border-indigo-500/20 shadow-[0_8px_32px_rgba(0,0,0,0.5)] hover:border-indigo-500/40 hover:shadow-[0_12px_48px_rgba(99,102,241,0.4)] hover:-translate-y-2 transition-all duration-300">
                  <div class="w-14 h-14 rounded-xl bg-indigo-500/10 flex items-center justify-center text-indigo-500 flex-shrink-0 group-hover:bg-indigo-500/20 group-hover:scale-110 transition-all duration-300">
                    <item.icon class="w-7 h-7" />
                  </div>
                  <div>
                    <h4 class="text-white font-black uppercase text-xl tracking-widest mb-2">{item.title}</h4>
                    <p class="text-white text-lg font-medium leading-relaxed">{item.desc}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>
          <div class="relative">
            <div class="absolute inset-0 bg-indigo-500/10 blur-[120px] rounded-full"></div>
            <div class="relative rounded-[48px] border border-white/10 p-1 bg-gradient-to-br from-white/[0.1] to-transparent overflow-hidden">
              <div class="p-12 bg-neutral-950/50 backdrop-blur-3xl">
                <div class="flex items-center justify-between mb-10">
                  <div class="text-sm font-black uppercase tracking-widest text-indigo-500">Upcoming_Bookings</div>
                  <div class="px-3 py-1 rounded-full bg-indigo-500/10 border border-indigo-500/20 text-[10px] font-black text-indigo-400">ACTIVE_SYNC</div>
                </div>
                <div class="space-y-6">
                  {[
                    { time: "9:00 AM", name: "Sarah Jenkins", service: "Full Consultation" },
                    { time: "11:30 AM", name: "Mike Ross", service: "Follow-up Call" },
                    { time: "2:00 PM", name: "James Wilson", service: "Project Review" },
                  ].map((booking) => (
                    <div class="flex items-center gap-6 p-4 rounded-2xl bg-white/[0.03] border border-white/5">
                      <div class="text-indigo-400 font-mono font-bold text-lg">{booking.time}</div>
                      <div>
                        <div class="text-white font-black uppercase text-base tracking-tight">{booking.name}</div>
                        <div class="text-white opacity-60 text-sm font-medium">{booking.service}</div>
                      </div>
                    </div>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Deep Dive: Pipelines -->
    <section class="py-16 md:py-32 px-6 bg-white/[0.01] border-y border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="text-center max-w-3xl mx-auto mb-24">
          <div class="flex justify-center items-center gap-3 mb-8 text-indigo-500">
            <GanttChartSquare class="w-4 h-4" />
            <span class="text-[10px] font-black uppercase tracking-[0.5em]">Financial_Clarity</span>
          </div>
          <h2 class="text-5xl md:text-7xl font-display font-black tracking-tighter mb-8 leading-tight text-white">
            THE ULTIMATE <br />
            <span class="text-indigo-500 italic uppercase">SALES PIPELINE.</span>
          </h2>
          <p class="text-white text-xl font-medium leading-relaxed">
            Visualize your revenue at a glance. Track every opportunity from the first hello to the final invoice with our intuitive drag and drop interface.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 md:gap-8">
          {[
            { stage: "New Lead", count: 12, value: "$14,400", color: "bg-blue-500", borderColor: "border-blue-500/20" },
            { stage: "Qualified", count: 8, value: "$9,600", color: "bg-indigo-500", borderColor: "border-indigo-500/20" },
            { stage: "Proposal Sent", count: 5, value: "$25,000", color: "bg-amber-500", borderColor: "border-amber-500/20" },
            { stage: "Won", count: 14, value: "$42,000", color: "bg-emerald-500", borderColor: "border-emerald-500/20" },
          ].map((column) => (
            <div class={`group p-8 rounded-[32px] bg-[#020617] border-2 ${column.borderColor} shadow-[0_8px_32px_rgba(0,0,0,0.5)] hover:shadow-[0_12px_48px_rgba(99,102,241,0.3)] hover:-translate-y-1 transition-all duration-300`}>
              <div class="flex items-center justify-between mb-8">
                <div class="text-base font-black uppercase tracking-widest text-white">{column.stage}</div>
                <div class={`px-3 py-1.5 rounded-lg text-xs font-bold text-white ${column.color} shadow-lg`}>{column.count}</div>
              </div>
              <div class="text-4xl font-black text-white mb-4 group-hover:scale-105 transition-transform">{column.value}</div>
              <div class="h-2 w-full bg-white/10 rounded-full overflow-hidden">
                <div class={`h-full ${column.color} transition-all duration-500 group-hover:opacity-100`} style="width: 60%; opacity: 0.7"></div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>


    <!-- Deep Dive: Agent Broski -->
    <section class="py-12 md:py-20 px-6 bg-white/[0.01]">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
          <div>
            <div class="flex items-center gap-3 mb-8 text-indigo-500">
              <Mic class="w-4 h-4" />
              <span class="text-[10px] font-black uppercase tracking-[0.5em]">AI_Sales_Agent</span>
            </div>
            <h2 class="text-5xl md:text-6xl font-display font-black tracking-tighter mb-8 leading-tight text-white">
              AGENT BROSKI <br />
              <span class="text-indigo-500 italic uppercase">AI VOICE & TEXT.</span>
            </h2>
            <p class="text-white text-xl font-medium leading-relaxed mb-12">
              The CRM is the brain, but Agent Broski is the voice. Our AI Sales Agent handles the calls and texts, qualifying leads in real time and syncing every word to your CRM. Never miss a lead again.
            </p>
            <div class="space-y-6 mb-12">
              {[
                { title: "AI Voice Calls", desc: "Human grade phone conversations that qualify leads 24/7." },
                { title: "Smart Text Replies", desc: "Instant SMS responses that keep conversations moving forward." },
                { title: "CRM Integration", desc: "Every call and text is recorded and synced to the contact record." },
              ].map((item) => (
                <div class="group flex items-start gap-6 p-8 rounded-[32px] bg-[#020617] border-2 border-indigo-500/20 shadow-[0_8px_32px_rgba(0,0,0,0.5)] hover:border-indigo-500/40 hover:shadow-[0_12px_48px_rgba(99,102,241,0.4)] hover:-translate-y-2 transition-all duration-300">
                  <div class="w-14 h-14 rounded-xl bg-indigo-500/10 flex items-center justify-center text-indigo-500 flex-shrink-0 group-hover:bg-indigo-500/20 group-hover:scale-110 transition-all duration-300">
                    <Mic class="w-7 h-7" />
                  </div>
                  <div>
                    <h4 class="text-white font-black uppercase text-xl tracking-widest mb-2">{item.title}</h4>
                    <p class="text-white text-lg font-medium leading-relaxed">{item.desc}</p>
                  </div>
                </div>
              ))}
            </div>
            <a href="/conversational-ai" class="inline-flex items-center gap-3 bg-indigo-600 hover:bg-indigo-500 text-white px-8 py-4 rounded-full font-black uppercase tracking-[0.2em] shadow-xl shadow-indigo-600/20 transition-all hover:scale-105">
              Meet Agent Broski <ArrowRight class="w-5 h-5" />
            </a>
          </div>
          <div class="relative">
            <div class="absolute inset-0 bg-indigo-500/10 blur-[120px] rounded-full"></div>
            <div class="relative p-1 rounded-[48px] bg-gradient-to-br from-indigo-500/20 to-transparent">
              <div class="p-12 rounded-[46px] bg-[#020617] border border-white/5 relative overflow-hidden">
                <div class="absolute top-0 right-0 p-8 opacity-5">
                  <Bot class="w-32 h-32 text-indigo-500" />
                </div>
                <div class="relative z-10">
                  <div class="flex items-center gap-4 mb-8">
                    <div class="w-12 h-12 rounded-full bg-indigo-500/20 flex items-center justify-center border border-indigo-500/30">
                      <Activity class="w-6 h-6 text-indigo-500" />
                    </div>
                    <div>
                      <div class="text-xs font-black uppercase tracking-widest text-indigo-400">Live_Simulation</div>
                      <div class="text-white font-black">AI_CORE_ACTIVE</div>
                    </div>
                  </div>
                  <div class="space-y-4">
                    <div class="p-4 rounded-2xl bg-white/[0.05] border border-white/10 text-lg font-medium text-white">
                      "Agent Broski: Hello! I see you are looking for a quote. I have an opening at 2:00 PM tomorrow. Should I lock that in?"
                    </div>
                    <div class="p-4 rounded-2xl bg-indigo-500/10 border border-indigo-500/20 text-lg font-medium text-indigo-100 italic">
                      "CRM Alert: Appointment confirmed. Moving lead to 'Booked' stage. Triggering confirmation sequence."
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Deep Dive: RevuBro -->
    <section class="py-12 md:py-20 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">
