---
import BaseLayout from '../layouts/BaseLayout.astro';
import Footer from '../components/Footer';
import Navbar from '../components/Navbar';
import FloatingMenu from '../components/FloatingMenu';
import {
  Calendar,
  MessageSquare,
  ArrowRight,
  CheckCircle2,
  Zap,
  LayoutDashboard,
  PhoneCall,
  Bot,
  ShieldCheck,
  Clock,
  Headphones,
  Sparkles,
  Plus,
  Minus,
  HelpCircle,
  Send,
  Activity,
  Layers,
  X,
  Mic,
  FileText,
  TrendingUp,
  Smartphone,
} from 'lucide-react';

const pathname = "/ai-phone-crm";

// Form webhook URL - set PUBLIC_FORM_WEBHOOK_URL in .env to use your own webhook
const formWebhookUrl = import.meta.env.PUBLIC_FORM_WEBHOOK_URL || "https://services.leadconnectorhq.com/hooks/nUFqlRRkiJoqpyubsiaD/webhook-trigger/2b82f498-8934-4410-862f-264f9647f294";

const faqs = [
  {
    question: "Does Brobot One work with my existing desk phones?",
    answer: "Yes. Brobot One is a cloud-based desk phone system that works with your current desk phones. We port your number, and you keep using the hardware you already have—or go fully digital. Either way, you get AI answering, CRM, and 24/7 coverage."
  },
  {
    question: "Can I keep my current phone number?",
    answer: "Yes. We port your existing business number to the Brobot system. Your customers keep calling the same number. They just get a smarter experience."
  },
  {
    question: "How fast can we go live?",
    answer: "Most installations are complete within 7 days. We handle the migration, training, and go-live so you can focus on your business."
  },
  {
    question: "What if the AI can't handle a call?",
    answer: "The AI can instantly transfer to a human or take a detailed message. You stay in control with escalation rules and live handoff options."
  },
  {
    question: "Does it work with my existing customer database?",
    answer: "Brobot One includes a built-in system for tracking customers and leads. If you use another tool, we can discuss options during your free consultation."
  },
  {
    question: "What does pricing depend on?",
    answer: "Pricing is based on your call volume. We'll map your needs to the right plan during your free consultation. No surprises. No runaround."
  },
  {
    question: "Is there a mobile app?",
    answer: "Yes. The mobile app gives you full access: answer calls, check messages, and manage leads from your phone. No desk required. Great for field work or anyone who prefers managing things on the go."
  }
];

// FAQ schema for rich snippets
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqs.map((faq) => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};

// Product schema for Brobot One
const productSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Brobot One",
  "applicationCategory": "BusinessApplication",
  "description": "AI-powered desk phone solutions with built-in CRM. Answers calls 24/7, books appointments, follows up by text. Works with existing desk phones. Live in 7 days.",
  "operatingSystem": "Web, iOS, Android",
  "url": "https://thebrobot.com/ai-phone-crm",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD",
    "description": "Free consultation"
  }
};
---

<BaseLayout
  title="Brobot One | AI Desk Phone Solutions + CRM | The Brobot"
  description="Desk phone solutions that actually work. Brobot One: AI-powered desk phone system with built-in CRM. AI answers 24/7, books appointments, follows up by text. Works with your desk phones. Live in 7 days."
  image="/phones-hero.png"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(productSchema)} />
  </Fragment>
  <main class="min-h-screen bg-[#020617] text-white pt-28 pb-16 md:pt-32 md:pb-20">
    <Navbar client:load pathname={pathname} />

    <!-- SECTION 1 - HERO -->
    <section class="relative px-4 md:px-6 lg:px-10 pt-10 md:pt-16 pb-12 md:pb-20 overflow-visible">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_80%_at_50%_40%,rgba(16,185,129,0.2)_0%,rgba(16,185,129,0.05)_50%,transparent_70%)]"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[500px] bg-emerald-500/15 blur-[140px] rounded-full -z-10"></div>
      <div class="max-w-7xl mx-auto relative z-10">
        <!-- Hero: text + phones image side by side (above the fold) -->
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-6 lg:gap-8">
          <!-- Left: Headline + copy + CTA -->
          <div class="flex-1 text-center lg:text-left lg:pr-12 xl:pr-16">
            <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full border border-amber-500/20 bg-amber-500/5 mb-5">
              <Zap class="w-3 h-3 text-amber-400/90" />
              <span class="text-[11px] font-semibold uppercase tracking-[0.25em] text-amber-400/90">Desk Phone + CRM + AI</span>
            </div>
            <h1 class="text-4xl md:text-5xl lg:text-5xl xl:text-6xl font-display font-black tracking-tighter mb-3 leading-snug">
              AI-Powered Desk Phone Solutions for Small Business
            </h1>
            <p class="text-xl md:text-2xl lg:text-2xl font-semibold text-white/95 tracking-tight mb-5">
              Desk phone system with built-in CRM and AI. Answer calls 24/7, never miss a lead.
            </p>
            <p class="inline-flex items-center justify-center lg:inline-flex gap-2 px-3 py-1.5 rounded-xl bg-emerald-500/10 border border-emerald-500/20 mb-5">
              <span class="w-1.5 h-1.5 rounded-full bg-emerald-400 animate-pulse"></span>
              <span class="text-[11px] font-semibold uppercase tracking-[0.25em] text-emerald-300/90">Live in as little as 7 days</span>
            </p>
            <!-- Mobile: image appears right after the pill -->
            <div class="lg:hidden w-full max-w-md mx-auto mb-5">
              <img
                src="/phones-hero.png"
                alt="Switch your number from your current provider to Brobot One"
                class="w-full h-auto drop-shadow-[0_20px_60px_rgba(0,0,0,0.3)]"
              />
            </div>
            <p class="text-lg text-white/95 font-medium mb-6 leading-relaxed max-w-xl lg:max-w-none">
              Stay connected, automate follow-ups, and scale without the chaos. Built by business owners, for business owners.
            </p>
          </div>
          <!-- Right: Phones image + CTA (above the fold) - image hidden on mobile, shown in left column after pill -->
          <div class="flex flex-shrink-0 lg:w-[50%] flex-col items-center lg:items-end justify-center">
            <div class="w-full max-w-md lg:max-w-xl">
              <img
                src="/phones-hero.png"
                alt="Switch your number from your current provider to Brobot One"
                class="hidden lg:block w-full h-auto drop-shadow-[0_20px_60px_rgba(0,0,0,0.3)]"
              />
              <div class="mt-3 flex flex-col items-center gap-4">
                <p class="text-center text-white font-medium text-[15px] uppercase tracking-widest">
                  Keep your number. Switch to Brobot One.
                </p>
                <a
                  href="#audit-form"
                  class="inline-flex items-center justify-center gap-3 bg-emerald-600 hover:bg-emerald-500 text-white px-10 py-5 rounded-full font-black uppercase tracking-[0.2em] text-base shadow-[0_0_50px_-10px_rgba(16,185,129,0.6)] hover:shadow-[0_0_60px_-10px_rgba(16,185,129,0.8)] transition-all hover:scale-105 border border-emerald-500/30"
                >
                  Book Free Consultation <ArrowRight class="w-5 h-5" />
                </a>
              </div>
            </div>
          </div>
        </div>
        <!-- Bento box flip cards (below fold) -->
        <div class="mt-12 md:mt-16 max-w-4xl mx-auto">
          <p class="text-[11px] font-semibold uppercase tracking-[0.25em] text-emerald-400/80 mb-6 text-center">What You Get</p>
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 md:gap-6">
            {[
              { front: "Never miss a call", sub: "AI answers 24/7", back: "Our AI answers every call, day or night. Qualifies leads, captures details, and never sends anyone to voicemail." },
              { front: "Every call recorded & transcribed", sub: "Included, not an add-on", back: "Full audio and searchable text for every call. Compliance-ready. Train your team. No extra fees. Others charge $50-200+/mo." },
              { front: "Follow up within seconds", sub: "By SMS", back: "Text every caller within seconds. Keep them warm until they're ready. No more waiting hours to follow up." },
              { front: "One platform. One dashboard.", sub: "Zero leaks.", back: "Calls, texts, leads, and bookings in one place. Nothing slips through the cracks." },
            ].map((item) => (
              <div class="bento-flip-card group cursor-pointer" tabindex="0" role="button" aria-label={`${item.front}. Hover or tap to read more.`}>
                <div class="bento-flip-inner">
                  <div class="bento-flip-front rounded-2xl border border-white/10 bg-white/[0.04] p-6 flex flex-col items-center justify-center text-center min-h-[160px]">
                    <CheckCircle2 class="w-8 h-8 text-emerald-400 mb-3" />
                    <span class="text-white font-bold text-lg">{item.front}</span>
                    <span class="text-emerald-400/90 text-base font-medium mt-1">{item.sub}</span>
                    <span class="tap-hint text-[15px] text-white/50 mt-3 font-medium">Tap to reveal</span>
                  </div>
                  <div class="bento-flip-back rounded-2xl border border-emerald-500/30 bg-emerald-500/10 p-6 flex flex-col items-center justify-center text-center min-h-[160px]">
                    <p class="text-white/95 text-base font-medium leading-relaxed">{item.back}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
          <p class="text-white font-semibold text-lg mt-6 text-center max-w-lg mx-auto">Finally, a phone system that actually works. No more runaround.</p>
          <div class="flex flex-wrap items-center justify-center gap-3 mt-5">
            <div class="flex items-center gap-2 px-4 py-2 rounded-2xl bg-white/[0.05] border border-white/10 hover:border-emerald-500/30 transition-colors">
              <Headphones class="w-3 h-3 text-emerald-400/90" />
              <span class="text-[11px] font-semibold text-white/90 uppercase tracking-wider">White-glove setup</span>
            </div>
            <div class="flex items-center gap-2 px-4 py-2 rounded-2xl bg-white/[0.05] border border-white/10 hover:border-emerald-500/30 transition-colors">
              <ShieldCheck class="w-3 h-3 text-emerald-400/90" />
              <span class="text-[11px] font-semibold text-white/90 uppercase tracking-wider">No long-term contracts</span>
            </div>
            <div class="flex items-center gap-2 px-4 py-2 rounded-2xl bg-white/[0.05] border border-white/10 hover:border-emerald-500/30 transition-colors">
              <Activity class="w-3 h-3 text-emerald-400/90" />
              <span class="text-[11px] font-semibold text-white/90 uppercase tracking-wider">US-based support</span>
            </div>
            <div class="flex items-center gap-2 px-4 py-2 rounded-2xl bg-white/[0.05] border border-white/10 hover:border-emerald-500/30 transition-colors">
              <Smartphone class="w-3 h-3 text-emerald-400/90" />
              <span class="text-[11px] font-semibold text-white/90 uppercase tracking-wider">Mobile app included</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 2 - PROBLEM -->
    <section class="py-12 md:py-20 px-4 md:px-6 bg-white/[0.01] overflow-hidden">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 mb-5 px-3 py-1.5 rounded-full border border-emerald-500/20 bg-emerald-500/5">
            <Zap class="w-3 h-3 text-emerald-500/90" />
            <span class="text-[11px] font-semibold uppercase tracking-[0.25em] text-emerald-400/90">The_Problem</span>
          </div>
          <p class="text-emerald-400 font-bold text-lg mb-4">Sick of your phone company? Tired of the runaround?</p>
          <h2 class="text-4xl md:text-6xl font-display font-black tracking-tighter text-white mb-5 leading-tight">
            Most Businesses Don't Have a Lead Problem. They Have a Response Time Problem.
          </h2>
          <p class="text-white text-xl font-medium leading-relaxed max-w-3xl mx-auto mb-6">
            Calls come in. They wait. They go cold. Your desk phone system might be ringing, but it's not helping you win. By the time you call back, they've already chosen someone else or forgotten they reached out.
          </p>
          <ul class="max-w-2xl mx-auto space-y-4 text-white font-medium text-left">
            <li class="flex items-center gap-4">
              <span class="w-3 h-3 rounded-md bg-emerald-500/30 border border-emerald-500/50 flex-shrink-0" aria-hidden="true"></span>
              <span>Studies show 78% of buyers choose the first business that responds.</span>
            </li>
            <li class="flex items-center gap-4">
              <span class="w-3 h-3 rounded-md bg-emerald-500/30 border border-emerald-500/50 flex-shrink-0" aria-hidden="true"></span>
              <span>A 5-minute delay can cut your chance of winning the sale in half.</span>
            </li>
            <li class="flex items-center gap-4">
              <span class="w-3 h-3 rounded-md bg-emerald-500/30 border border-emerald-500/50 flex-shrink-0" aria-hidden="true"></span>
              <span>Missed calls and slow follow-up are the silent revenue killers.</span>
            </li>
          </ul>
          <p class="mt-8 text-center text-xl md:text-2xl font-black text-emerald-400 italic">
            Speed to lead matters. The businesses that respond first win.
          </p>
          <div class="mt-10 flex justify-center">
            <a
              href="#audit-form"
              class="inline-flex items-center gap-3 bg-emerald-600 hover:bg-emerald-500 text-white px-10 py-5 rounded-full font-black uppercase tracking-[0.2em] text-base shadow-[0_0_50px_-10px_rgba(16,185,129,0.6)] hover:shadow-[0_0_60px_-10px_rgba(16,185,129,0.8)] transition-all hover:scale-105 border border-emerald-500/30"
            >
              See the Solution <ArrowRight class="w-5 h-5" />
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 3 - WHAT IT REPLACES -->
    <section class="py-12 md:py-20 px-4 md:px-6 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-emerald-500/10 via-transparent to-emerald-500/5"></div>
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-emerald-500/10 blur-[120px] rounded-full -z-10"></div>
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 mb-6 px-3 py-1.5 rounded-full border border-emerald-500/20 bg-emerald-500/5">
            <Layers class="w-3 h-3 text-emerald-400/90" />
            <span class="text-[11px] font-semibold uppercase tracking-[0.25em] text-emerald-400/90">The Choice</span>
          </div>
          <h2 class="text-4xl md:text-6xl font-display font-black tracking-tighter text-white mb-4 leading-tight">
            Kill the Chaos. <span class="text-emerald-400 italic">Switch to One.</span>
          </h2>
          <p class="text-white/80 text-lg md:text-xl font-medium max-w-2xl mx-auto">
            Your phone company and scattered tools are bleeding leads and cash. One platform fixes it. No more runaround.
          </p>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-[1fr_auto_1fr] gap-6 lg:gap-8 items-stretch max-w-6xl mx-auto">
          <!-- OLD: The Fragmented Stack -->
          <div class="relative rounded-[40px] p-6 md:p-8 border-2 border-red-500/20 bg-red-950/30 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-red-500/5 to-transparent"></div>
            <div class="absolute top-0 right-0 px-3 py-1 rounded-bl-xl bg-red-500/20 border-b border-l border-red-500/30">
              <span class="text-[11px] font-semibold uppercase tracking-[0.25em] text-red-400/90">The Old Way</span>
            </div>
            <div class="relative pt-8">
              <div class="text-red-400/90 font-black text-lg uppercase tracking-wider mb-6">Your phone company. Fragmented. Expensive. Leaky.</div>
              <ul class="space-y-3">
                {[
                  { item: "Landline or old desk phone provider", pain: "Missed calls, voicemail jail" },
                  { item: "Separate database + Calendly + SMS", pain: "Manual entry, extra fees" },
                  { item: "Email follow-up", pain: "Slow, gets buried" },
                  { item: "Scattered tools", pain: "Leads slip through" },
                ].map(({ item, pain }) => (
                  <li class="flex items-start gap-3 group">
                    <X class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" />
                    <div>
                      <span class="text-white line-through font-medium">{item}</span>
                      <div class="text-red-400/80 text-[15px] font-medium mt-0.5">{pain}</div>
                    </div>
                  </li>
                ))}
              </ul>
              <div class="mt-8 pt-6 border-t border-red-500/20">
                <div class="text-red-400 font-bold text-[15px]">$500+/mo in tools. Leads still slip through.</div>
              </div>
            </div>
          </div>
          <!-- Arrow / Switch indicator (desktop) -->
          <div class="hidden lg:flex items-center justify-center px-2">
            <div class="flex flex-col items-center gap-2">
              <ArrowRight class="w-10 h-10 text-emerald-500 rotate-90" />
              <span class="text-[11px] font-semibold uppercase tracking-[0.25em] text-emerald-400/90">Switch</span>
            </div>
          </div>
          <!-- NEW: Brobot One -->
          <div class="relative rounded-[40px] p-6 md:p-8 border-2 border-emerald-500/40 bg-gradient-to-br from-emerald-500/20 via-emerald-500/10 to-transparent overflow-hidden shadow-[0_0_60px_-15px_rgba(16,185,129,0.4)]">
            <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_50%_at_50%_0%,rgba(16,185,129,0.2)_0%,transparent_70%)]"></div>
            <div class="absolute top-0 right-0 px-3 py-1 rounded-bl-xl bg-emerald-500/30 border-b border-l border-emerald-500/40">
              <span class="text-[11px] font-semibold uppercase tracking-[0.25em] text-emerald-200/90">Brobot One</span>
            </div>
            <div class="relative pt-8">
              <div class="text-emerald-200 font-black text-lg uppercase tracking-wider mb-6">One Platform. Zero Leaks.</div>
              <ul class="space-y-3">
                {[
                  { item: "Phone + customer info in one", benefit: "Answers, books, syncs." },
                  { item: "Unified inbox", benefit: "Calls, texts, leads, one place" },
                  { item: "Built-in booking", benefit: "No Calendly. No extra fees." },
                  { item: "AI follow-up by SMS", benefit: "Seconds, not hours" },
                ].map(({ item, benefit }) => (
                  <li class="flex items-start gap-3">
                    <CheckCircle2 class="w-5 h-5 text-emerald-400 flex-shrink-0 mt-0.5" />
                    <div>
                      <span class="text-white font-bold">{item}</span>
                      <div class="text-emerald-200/90 text-[15px] font-medium mt-0.5">{benefit}</div>
                    </div>
                  </li>
                ))}
              </ul>
              <div class="mt-8 pt-6 border-t border-emerald-500/30">
                <div class="text-emerald-200 font-bold text-[15px]">One price. One login. Leads never slip.</div>
              </div>
              <a href="#audit-form" class="mt-8 inline-flex items-center gap-2 bg-emerald-500 hover:bg-emerald-400 text-white px-6 py-3 rounded-full font-black text-[15px] uppercase tracking-wider transition-all hover:scale-105">
                Make the Switch <ArrowRight class="w-4 h-4" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- SECTION 5 - HOW IT WORKS -->
    <section id="how-it-works" class="py-12 md:py-20 px-4 md:px-6 relative overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_60%_at_50%_50%,rgba(16,185,129,0.12)_0%,transparent_60%)]"></div>
      <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-emerald-500/20 to-transparent"></div>
      <div class="max-w-7xl mx-auto relative z-10">
        <div class="text-center mb-12 md:mb-16">
          <div class="inline-flex items-center gap-2 mb-6 px-3 py-1.5 rounded-full border border-emerald-500/20 bg-emerald-500/5">
            <Sparkles class="w-3 h-3 text-emerald-400/90" />
            <span class="text-[11px] font-semibold uppercase tracking-[0.25em] text-emerald-400/90">White-Glove Experience</span>
          </div>
          <h2 class="text-4xl md:text-6xl font-display font-black tracking-tighter text-white mb-4 leading-tight">
            We Take Care of <span class="text-emerald-400 italic">Everything.</span>
          </h2>
          <p class="text-white text-lg md:text-xl font-medium max-w-2xl mx-auto leading-relaxed">
            You focus on your business. We handle the setup, migration, and optimization. Your only job is to show up and watch it work.
          </p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-8">
          {[
            { step: "01", title: "Free Consultation & Plan", desc: "We review your setup and goals. We map out what you need. No homework for you." },
            { step: "02", title: "Installation & Migration", desc: "We port your number, configure the AI, and connect your calendar. You keep your current number." },
            { step: "03", title: "Go Live & Optimize", desc: "Live in days. We monitor, tune, and keep everything running. Ongoing support included." },
          ].map((item) => (
            <div class="group relative p-6 md:p-8 rounded-[32px] bg-gradient-to-br from-white/[0.04] to-white/[0.01] border border-emerald-500/20 shadow-[0_8px_32px_rgba(16,185,129,0.15)] hover:border-emerald-500/40 hover:shadow-[0_16px_48px_rgba(16,185,129,0.25)] hover:-translate-y-2 transition-all duration-300 overflow-hidden">
              <div class="absolute top-0 right-0 w-32 h-32 bg-emerald-500/10 rounded-full blur-2xl -translate-y-1/2 translate-x-1/2 group-hover:bg-emerald-500/20 transition-colors"></div>
              <div class="relative">
                <div class="flex items-center gap-3 mb-6">
                  <div class="w-14 h-14 rounded-2xl bg-emerald-500/20 border border-emerald-500/30 flex items-center justify-center text-emerald-400 font-black text-xl group-hover:scale-110 transition-transform">
                    {item.step}
                  </div>
                  <h3 class="text-xl md:text-2xl font-black text-white uppercase tracking-tight">{item.title}</h3>
                </div>
                <p class="text-white text-base font-medium leading-relaxed">{item.desc}</p>
              </div>
            </div>
          ))}
        </div>
        <p class="mt-8 text-center text-white text-base md:text-lg font-medium">Fully digital, cloud-based desk phone system. Works with your existing desk phones too. Answer from anywhere.</p>
        <div class="mt-10 text-center">
          <a
            href="#audit-form"
            class="inline-flex items-center gap-3 bg-emerald-600 hover:bg-emerald-500 text-white px-10 py-5 rounded-full font-black uppercase tracking-[0.2em] text-base shadow-[0_0_50px_-10px_rgba(16,185,129,0.6)] transition-all hover:scale-105 border border-emerald-500/30"
          >
            Ready to Get Started? <ArrowRight class="w-5 h-5" />
          </a>
        </div>
      </div>
